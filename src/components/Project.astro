---
const { title, desc, tech, link, showLink = true } = Astro.props;
const linkLabel = link ? new URL(link).hostname.replace(/^www\./, '') : '';
---

<div class="single-item">
  <h3>{title}</h3>
  <div class="project-desc project-desc-list w-richtext">
    <ul role="list">
      {desc.map(item => <li>{item}</li>)}
    </ul>
  </div>
  {link && showLink && (
    <div class="project-link-out">
      <a href={link} target="_blank" rel="noopener noreferrer">
        Visitar {linkLabel || 'proyecto'}
      </a>
    </div>
  )}
  <div class="mini-label-white">Tecnolog√≠as y herramientas</div>
  <div class="chips-container">
    {tech.map(techItem => <div class="single-chip">{techItem}</div>)}
  </div>
</div>
