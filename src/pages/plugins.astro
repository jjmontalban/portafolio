---
import Layout from "../layouts/Layout.astro";
import ContactCTA from "../components/ContactCTA.astro";

import { getIconData, iconToSVG } from "@iconify/utils";
import { icons as simpleIcons } from "@iconify-json/simple-icons";
/* ========================================================= */
/* ICONS                                                     */
/* ========================================================= */
const wordpress = iconToSVG(getIconData(simpleIcons, "wordpress"), { width:24 });
const woocommerce = iconToSVG(getIconData(simpleIcons, "woocommerce"), { width:24 });
const php = iconToSVG(getIconData(simpleIcons, "php"), { width:24 });
const javascript = iconToSVG(getIconData(simpleIcons, "javascript"), { width:24 });
const prestashop = iconToSVG(getIconData(simpleIcons, "prestashop"), { width:24 });
const vue = iconToSVG(getIconData(simpleIcons, "vuejs"), { width:24 });
const github = iconToSVG(getIconData(simpleIcons, "github"), { width:24 });

/* ========================================================= */
/*                                                           */
/* ========================================================= */

const techIcons = {
  "WordPress": wordpress,
  "WordPress (API)": wordpress,
  "WooCommerce": woocommerce,
  "PHP": php,
  "JavaScript": javascript,
  "PrestaShop": prestashop,
  "Vue.js": vue,
};

const plugins = [
  {
    title: "Woocommerce Quantity",
    image: "/assets/plugins/plugin-quantity-settings.webp",
    desc: "Permite definir cantidades mínimas, máximas o rangos en productos WooCommerce sin escribir código.",
    github: "#",
    link: "https://wordpress.org/plugins/product-quantity-settings/",
  },
  {
    title: "EU VAT Number",
    image: "/assets/plugins/plugin-vat.webp",
    desc: "Gestión automática del IVA intracomunitario en WooCommerce con validación de VAT.",
    github: "#",
    link: "https://wordpress.org/plugins/eu-vat-number/",
  },
  {
    title: "Idealista Feed",
    image: "/assets/plugins/plugin-idealista.webp",
    desc: "Exporta inmuebles desde WordPress a Idealista mediante feed XML automático.",
    github: "#",
    link: "https://wordpress.org/plugins/idealista-feed-pro/",
  },
  {
    title: "Ps WhatsApp",
    image: "/assets/plugins/modulo-whatsapp.webp",
    desc: "Desarrollo a medida e integración funcional para tiendas PrestaShop con enfoque en rendimiento y usabilidad.", 
    github: "#",
    link: "#",
  },
  {
    title: "Filmder",
    image: "/assets/plugins/movie-match.webp",
    desc: "Proyecto personal con frontend moderno y backend desacoplado para iterar rápido y mantener APIs limpias.",
    github: "#",
    link: "#",
  },
];
---

---

<Layout
  title="Plugins y herramientas | JJ Montalban"
  page="page-plugins"
  description="Plugins y herramientas para WordPress, WooCommerce, JavaScript y frameworks modernos. Soluciones reales con enfoque técnico."
>
  <div class="container">

    <section class="content-container">
      <h1>Plugins y herramientas</h1>

      <p class="lead">
        Desarrollo soluciones reales para WordPress y WooCommerce, JavaScript y frameworks modernos.
        También creo módulos para PrestaShop, además de proyectos personales y herramientas propias listas para producción.
      </p>

        <div class="plugins-grid">
          {plugins.map(plugin => (
            <article class="plugin-card">
              <img
                src={plugin.image}
                alt={plugin.title}
                class="plugin-image"
              />

              <div class="plugin-body">
                <h2>{plugin.title}</h2>

                <div class="plugin-tech">
                  {plugin.tech.map((tech) => {
                    const icon = techIcons[tech];
                    return icon ? (
                      <span class="plugin-tech-icon">
                        <svg viewBox="0 0 24 24" set:html={icon.body} />
                        <span class="sr-only">{tech}</span>
                      </span>
                    ) : null;
                  })}
                </div>

                <p class="plugin-desc">
                  {plugin.desc}
                </p>

                <div class="plugin-links">
                  <a
                    href={plugin.github}
                    target="_blank"
                    class="plugin-link"
                  >
                    <svg viewBox="0 0 24 24" set:html={github.body} />
                    <span class="sr-only">github</span>
                  </a>

                  <a
                    href={plugin.link}
                    target="_blank"
                    class="plugin-link"
                  >
                    <svg viewBox="0 0 24 24" set:html={wordpress.body} />
                    <span class="sr-only">wordpress plugin</span>
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>

    </section>

    <ContactCTA
      title="¿Tienes una idea de plugin?"
      text="Diseño y desarrollo plugins WordPress estables y mantenibles."
      button="Cuéntame tu idea"
    />
  </div>
</Layout>
